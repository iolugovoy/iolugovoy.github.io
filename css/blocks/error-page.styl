.error-page
    display inline-block
    vertical-align middle
    white-space normal
    color black
    img
        max-width 500px
        display block
        margin-x auto
    &-wrapper
        position absolute
        pos 0 0 0 0
        background-color white
        white-space nowrap
        text-align center
        height 100%
        min-width 320px
        &::before
            content ''
            display inline-block
            height 100%
            vertical-align middle