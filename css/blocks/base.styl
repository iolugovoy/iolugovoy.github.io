html
	height 100%
	width 100%
	min-width 320px
	padding 0px
	margin 0px
	position relative
	&.scroll-locked
		overflow hidden
		body
			overflow hidden
body
	height 100%
	width 100%
	padding 0px
	margin 0px
	set('font-size', 14px 16px n n 18px n)
	set('line-height', 1.35em 1.37em n n 1.38em n)
	color $baseFontColor
	min-width 320px
	position relative
.body
	display flex
	position relative
	flex-direction column
	justify-content space-between
	align-items center
	font-family 'Roboto'
	font-weight 400
	min-height 100%
	color #282828
	padding 0px
	margin 0px
	font-size 16px 
	&__content
		position relative
		z-index 0
		padding-y 70px
		width 1230px
		max-width 100%
		padding-x 15px 
		align-items center
		display flex
		flex-direction column
	.footer, .header
		flex 0 0 auto
.global-overlay
	position fixed
	left 0px
	right 0px
	top 0px
	bottom 0px
	width 100%
	height 100%
	z-index 1999
	display none
	background-color rgba(#000,0.5)
	
p, ul, ol, table
	margin 0px
	padding 0
	margin 0
	// margin-y 1em
	color $baseFontColor
	font-weight 400
	list-style-type none
	margin-left 0
	+above(xl)
		// margin-y 1.5em
ol, ul
	// margin-left 20px
li
	margin 0
	// margin-y 5px
	// +above(md)
	// margin-y 10px

a
	text-decoration none
	display inline
	color $baseLinkColor
	border-bottom 1px solid  rgba($baseLinkColor, 0.5)
	&:hover, &:focus
		color lighten($baseLinkColor, 20%)
		text-decoration none
		border-bottom-color transparent
.a
	aReset()
	&:hover, &:focus
		color lighten($baseFontColor, 20%)

h1, h2, h3, h4, h5, h6, .title
	color $baseFontColor
	line-height 1.28em
	font-weight 400
	margin-y 0
h1, .title
	font-size 28px

	+above(sm)

		font-size 30px
	+above(md)

		font-size 34px
	+above(xl)
		font-size 34px
h2
	font-size 20px
	+above(sm)
		font-size 24px
	+above(md)
		font-size 30px
	+above(xl)
		font-size 36px
h3
	font-size 18px
	+above(sm)
		font-size 20px
	+above(md)
		font-size 22px
	+above(xl)
		font-size 23px
		
h4, h5, h6
	font-size 16px
	+above(sm)
		font-size 18px
	+above(md)
		font-size 20px
	+above(xl)
		font-size 24px
.subtitle
	font-size 
	
.rouble
	font-family $ptr
.hidden
	display none !important
.img
	display block
	max-width 100%
	width auto !important	
	
.table
	overflow auto
	margin-y 15px
	+above(lg)
		margin-y 20px
	+above(xl)
		margin-y 25px
	&>table
		width 100%
		margin 0
	&__active
		background-color #dddddd
table
	border-collapse collapse

.touchevents
	.link, .overlay
		cursor pointer !important

.title
	margin-bottom 20px
	text-align center
.subtitle
	margin-bottom 50px 
	text-align center
.clearfix
	clearfix()

.city-list-wrapper
	width 100%
	position relative
	margin-bottom 8px
	.slider-prev, .slider-next
		z-index 10
		position absolute
		width 40px
		height 100%
		background-color transparent
		top 0
		display flex 
		justify-content center
		align-items center
		&:active
			background-color rgba(0,0,0,.2)
		+above(md)
			display none
		
		svg
			opacity .5
			width 20px
			
	.slider-prev
		left 0
		svg 
			transform rotate(180deg)
	.slider-next
		right 0
		
.city-list
	display flex

	width 100%

	.city-item
		flex-grow 1
		flex-basis 0 
		flex-shrink 1
		font-weight 300px
		height 340px
		background-color #282828
		display flex 
		align-items center
		position relative
		justify-content center
		cursor pointer
		overflow hidden
		+below(sm)
			height 290px


		&__image 
			opacity 25%
			transition opacity .2s ease-in-out
			position absolute
			min-height 100%
			min-width 100%
			

		&__text
			font-size 34px
			font-weight 300
			color white 
			text-transform uppercase
			z-index 2
			+below(1200px)
				font-size 30px
			+below(1000px)
				font-size 26px
		&:not(:last-child)
			margin-right 8px
		&:hover, &.active
			.city-item__image
				opacity 100%
				z-index 1
	
				
.data-list 
	width 100%
	
.data-item
	width 100%
	display flex
	margin-bottom 8px 
	transition all .2s ease-in-out
	transform translateY(20px)
	opacity 0
	+below(md)
		flex-wrap wrap
	&__col
		flex-basis 0 
		flex-grow 1
		flex-shrink 1
		padding-y 30px 
		padding-left 45px
		padding-right 45px
		background-color #f7f7f7
		+below(sm)
			flex-basis 100%
			
		&:not(:last-child)
			margin-right 8px
			+below(sm)
				margin-right 0
				margin-bottom 8px
	&__title
		margin-bottom 25px
	&.active
		transform translateY(0)
		opacity 1
.adv-item
	display flex 
	align-items flex-start
	&:not(:last-child)
		margin-bottom 15px	
	&__icon
		margin-right 20px
	
.about-button
	padding-x 45px
	padding-y 13px
	background-color #ff5700
	color white 
	border-radius 4px 
	border none
	box-shadow 0 2px 2px 0px rgba(0,0,0,.3)
	transition all .2s ease-in-out
	cursor pointer
	margin-top 30px
	will-change transform
	&:hover, &:focus
		transform translateY(-3px)
		box-shadow 0 4px 10px 0px rgba(0,0,0,.3)