.modal
    width 100%
    max-width 600px
    display inline-block
    background-color white
    overflow hidden
    position relative
    cursor default
    vertical-align middle
    white-space normal
    text-align left
    margin-y 50px
    box-shadow 0px 0px 20px rgba(#000, 0.5)
    &_wide
        +above(sm)
            max-width 1160px
    &__close
        z-index 100
        cross 1px #c4c4c4 28px 28px 28px 28px
        position absolute
        right 10px
        top 10px
        cursor pointer