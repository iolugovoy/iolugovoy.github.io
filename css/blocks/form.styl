.form
	&__title
		margin-top 0px
		margin-bottom 0px
	&__row
		margin-y 20px
		input:not([type]),
		input[type="email"],
		input[type="number"],
		input[type="password"],
		input[type="tel"],
		input[type="url"],
		input[type="text"],
		textarea,
		select
			width 100%
	&__container
		padding 20px
	&__bottom
		padding-top 10px
	&__input-title
		margin-bottom 5px
		&.required
			&::before
				content '*'
				display inline
				color #f00
				margin-right 3px
	&__input-error
		border-color #f00
	&__photo
		width 70px
		display none
		margin-right 10px
		margin-top 5px
	&__photo-wrapper
		display flex
		align-items flex-start
	&__field-wrapper
		flex 1 1 auto
		
input:not([type]),
input[type="email"],
input[type="number"],
input[type="password"],
input[type="tel"],
input[type="url"],
input[type="text"],
textarea,
select
	padding 10px 20px
	display block
	border 1px solid #C4C4C4
	background-color #fff
	color $baseFontColor
	line-height 1.25em
	outline none
	&:focus
		border-color darken(#C4C4C4, 25%)
textarea
	min-height 150px
	
.button
	display inline-block
	cursor pointer
	padding 10px 20px
	text-decoration none
		
.error
	font-size 14px
	color #f00
	margin-top 5px